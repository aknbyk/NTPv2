        <Label Content="Label" Height="28" HorizontalAlignment="Left" Margin="153,9,0,0" Name="label1" VerticalAlignment="Top" Width="38" />
        <ScrollBar Height="23" HorizontalAlignment="Left" Margin="188,12,0,0" Name="scrollBar1" VerticalAlignment="Top" Width="18" Value="12" Maximum="100" Minimum="12" LargeChange="2" ValueChanged="scrollBar1_ValueChanged" SmallChange="2" />
        <ComboBox Height="26" HorizontalAlignment="Left" Margin="29,9,0,0" Name="comboBox1" VerticalAlignment="Top" Width="118" SelectionChanged="comboBox1_SelectionChanged">
            <ComboBoxItem Content="Myriad Pro" />
            <ComboBoxItem Content="Broadway" />
            <ComboBoxItem Content="Arial" />
            <ComboBoxItem Content="Comic Sans MS" />
            <ComboBoxItem Content="Gigi" />
            <ComboBoxItem Content="Rosewood Std Regular" />
            <ComboBoxItem Content="Vladimir Script" />
            <ComboBoxItem Content="Forte" />
            <ComboBoxItem Content="Showcard Gothic" />
        </ComboBox>
    </Grid>
</Window>
