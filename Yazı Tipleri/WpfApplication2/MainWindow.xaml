        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Height="223" HorizontalAlignment="Left" Margin="29,46,0,0" Name="textBox1" VerticalAlignment="Top" Width="444" TextChanged="textBox1_TextChanged">
            <TextBox.ContextMenu>
                <ContextMenu >
                    <MenuItem Header="10" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Header="20" Click="MenuItem_Click_1"></MenuItem>
                    <MenuItem Header="30" Click="MenuItem_Click_2" ></MenuItem>
                    <Separator></Separator>
                    <MenuItem Header="Kırmızı" Click="MenuItem_Click_3"></MenuItem>
                    <MenuItem Header="Sarı" Click="MenuItem_Click_4"></MenuItem>
                    <MenuItem Header="Mavi" Click="MenuItem_Click_5"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Header="Kırmızı" Click="MenuItem_Click_6"></MenuItem>
                    <MenuItem Header="Sarı" Click="MenuItem_Click_7"></MenuItem>
                    <MenuItem Header="Mavi" Click="MenuItem_Click_8"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Header="Çıkış" Click="button2_Click"></MenuItem>
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>
        <Button Content="Temizle" Height="24" HorizontalAlignment="Left" Margin="121,275,0,0" Name="button1" VerticalAlignment="Top" Width="108" Click="button1_Click" />
